<Page x:Class="Cinema.AddPages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Вход в систему"
                   Foreground="#009999"
                   FontWeight="Bold"
                   FontSize="36"
                   Grid.Column="2"
                   Grid.Row="1"
                   Grid.ColumnSpan="4"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Логин:"         
                   Foreground="#009999"
                   FontSize="20"
                   Grid.Column="2"
                   Grid.Row="3"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>

        <TextBox  x:Name="log_txb"
                 FontSize="14"
                 Grid.Column="3"
                 Grid.Row="3"
                 Grid.ColumnSpan="3"
                 VerticalAlignment="Center"
                 BorderBrush="#009999"
                   Margin="0 0 65 0"/>

        <TextBlock Text="Пароль:"    
           Foreground="#009999"
           FontSize="20"
           Grid.Column="2"
           Grid.Row="4"
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"/>

        <PasswordBox x:Name="pass_txb"
                 BorderBrush="#009999"
                  Margin="0 0 65 0"
         FontSize="14"
         Grid.Column="3"
         Grid.Row="4"
         Grid.ColumnSpan="3"
         VerticalAlignment="Center"/>


        <Button Content="Войти"
                Grid.Row="5"
                Grid.Column="2"
                Grid.ColumnSpan="4"
                VerticalAlignment="Center"
                Foreground="#009999"
                Background="Transparent"
                FontSize="18"
                FontFamily="Cascadia Code"
                BorderBrush="#009999"
                BorderThickness="1"
                Click="Autho_btn_Click"/>


    </Grid>
</Page>
