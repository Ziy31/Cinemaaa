<Page x:Class="Cinema.AddPages.AddFilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddFilmPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Название:"
           Foreground="#009999"
           FontSize="32"
           VerticalAlignment="Center"
           Grid.ColumnSpan="2"
           Grid.Row="2"
           Grid.Column="1"/>

        <TextBlock Text="Жанр:"
   Foreground="#009999"
   FontSize="32"
   VerticalAlignment="Center"
   Grid.ColumnSpan="2"
   Grid.Row="3"
   Grid.Column="1"/>

        <TextBlock Text="Возраст:"
   Foreground="#009999"
   FontSize="32"
   VerticalAlignment="Center"
   Grid.ColumnSpan="2"
   Grid.Row="4"
   Grid.Column="1"/>

        <TextBlock Text="Цена:"
Foreground="#009999"
FontSize="32"
VerticalAlignment="Center"
Grid.ColumnSpan="2"
Grid.Row="5"
Grid.Column="1"/>

        <TextBox x:Name="txb_title"
            Grid.Column="3"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            VerticalAlignment="Center"/>

        <TextBox x:Name="txb_price"
    Grid.Column="3"
    Grid.Row="5"
    Grid.ColumnSpan="3"
    VerticalAlignment="Center"/>

        <ComboBox x:Name="AgeBox"
  Grid.Column="3"
  Grid.Row="4"
  Grid.ColumnSpan="3"
  VerticalAlignment="Center">
        </ComboBox>

        <ComboBox x:Name="GenreBox"
          Grid.Column="3"
          Grid.Row="3"
          Grid.ColumnSpan="3"
          VerticalAlignment="Center">
        </ComboBox>

        <Button Content="Добавить"
        Grid.Row="6"
        Grid.Column="2"
        Grid.ColumnSpan="4"
        VerticalAlignment="Center"
        Foreground="#009999"
        Background="Transparent"
        FontSize="18"
        FontFamily="Cascadia Code"
        BorderBrush="#009999"
        BorderThickness="1"
        Click="Add_btn_Click"/>


    </Grid>
</Page>
